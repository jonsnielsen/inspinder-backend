enum Permission {
  ADMIN
  USER
  POST_CREATE
  POST_UPDATE
  POST_DELETE
  PERMISSIONS_UPDATE
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String! 
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
}

type Post {
  id: ID! @unique
  title: String
  description: String
  image: String
  largeImage: String
  link: String
  user: User!
}